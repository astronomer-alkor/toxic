{
  "executionRoleArn": "arn:aws:iam::%ACCOUNT_NUMBER%:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::%ACCOUNT_NUMBER%:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "image": "%IMAGE%",
      "name": "transactions_monitor",
      "portMappings": [
        {
          "hostPort": 80,
          "protocol": "tcp",
          "containerPort": 80
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "%AWS_REGION%",
          "awslogs-group": "/toxic/api"
        }
      },
      "cpu": 1,
      "memory": 128,
      "entryPoint": [
        "python",
        "-m",
        "src"
      ],
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "%AWS_REGION%"
        },
        {
          "name": "AWS_ACCESS_KEY_ID",
          "value": "%AWS_ACCESS_KEY_ID%"
        },
        {
          "name": "AWS_SECRET_ACCESS_KEY",
          "value": "%AWS_SECRET_ACCESS_KEY%"
        },
        {
          "name": "DYNAMODB_HOST",
          "value": "%DYNAMODB_HOST%"
        },
        {
          "name": "DYNAMODB_PORT",
          "value": "%DYNAMODB_PORT%"
        },
        {
          "name": "API_URL",
          "value": "%API_URL%"
        },
        {
          "name": "TG_BOT_TOKEN",
          "value": "%TG_BOT_TOKEN%"
        },
        {
          "name": "WEBHOOK_PORT",
          "value": "%WEBHOOK_PORT%"
        },
        {
          "name": "WEBHOOK_URL_PATH",
          "value": "%WEBHOOK_URL_PATH%"
        },
        {
          "name": "WEBAPP_HOST",
          "value": "%WEBAPP_HOST%"
        },
        {
          "name": "WEBAPP_PORT",
          "value": "%WEBAPP_PORT%"
        },
        {
          "name": "NOTIFICATIONS_PATH",
          "value": "%NOTIFICATIONS_PATH%"
        }
      ],
      "essential": true
    }
  ],
  "cpu": "128",
  "memory": "128",
  "family": "toxic",
  "requiresCompatibilities": [
    "EC2"
  ],
  "networkMode": "awsvpc",
  "placementConstraints": [],
  "volumes": []
}